class Main {

  static int addition(int m, int n) {
    if (n == 0) {
      return m;
    } else if (n > 0) {
      return addition(m + 1, n - 1);
    } else {
      return addition(m - 1, n + 1);
    }
  }

  static void main(int m, int n) {
    if (m < 0 || m > 2147483647) {
      return;
    };
    if (n < 0 || n > 2147483647) {
      return;
    };
    int result = addition(m, n);
    if (result == m + n) {
      return;
    } else {
      assert false;
    }
  }
}
