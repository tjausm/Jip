//
// Bubble sort on an arr of integers
//
class Main {

    // Swap function
    static void swap(int[] arr, int i, int j){
        int temp := arr[i];
        arr[i] := arr[j];
        arr[j] := temp;
    }

    // A function to implement bubble sort
    static void bubbleSort(int [] arr)
    
    {
        int i := 0;
        int j := 0;
        while (i < #arr) {

            // Last i elements are already 
            // in place
            while (j < #arr - i - 1) {
                int a := arr [j];
                int b := arr [j + 1];
                if (a > b) {
                    Main.swap(arr, j, j+1);
                };;
                j := j + 1;
            }
        }
    }

    static void main(int[] arr)
    ensures (#arr > 1)
    {
        Main.bubbleSort(arr);
    }
}
