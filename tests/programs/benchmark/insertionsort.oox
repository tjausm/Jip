//
// Bubble sort on an array of integers
//
class Main {
    static void main(int [] array)
    {
        bool sorted := false;
        while (!sorted) {
            sorted := true;
            int i := 1;
            while (i < #array) {
                int a := array [i];
                int b := array [i - 1];
                if (a < b) {
                    array [i] := b;
                    array [i - 1] := a;
                    sorted := false;
                };
                i := i + 1;
            }
        }
//       assert 
//            forall array, m, mv : 
//                forall array, n, nv : 
//                    m < n ==> mv <= nv;

    }
}
