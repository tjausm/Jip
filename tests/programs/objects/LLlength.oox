class Main {
    
    static void main(Node p)
    ensures(p != null)
    {
        int len := p.length();

        bool correct := Main.checkLen(p, len);
        assert correct;
    }

    static bool checkLen(Node p, int len){
        while(p != null){
            len := len - 1;
            p := p.next;
        };
        return len == 0;
    }
}

//
// Linked-list, with several methods.
//
class Node {
    -int value ;
    -Node next ;

    Node(int value, Node next){
        this.value := value;
        this.next := next;
    }

    int length() {
        Node n := this.next;
        if (n==null) return 1 ;
        else {
            int k := n.length() ;
            return k+1 ;
        };
    }

}
